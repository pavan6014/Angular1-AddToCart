<div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="headline"><h2>Create New User</h2></div>
            </div>
        </div>
    <div class="row">
        <div class="col-sm-3">
            <div admin-navigation></div>
        </div>

        <div class="col-sm-9">

            <div class="panel panel-default margin-bottom-40">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa"></i>Create Rogers User</h3>
                </div>

                <div class="panel-body">

                    <div class="row margin-bottom-10">
                            <div class="col-sm-6 margin-bottom-10">
                                <label>Roles <span style="color: red;">*</span></label>
                                <div class="input-group col-sm-12">
                                    <select custom-select  class="form-control">
                                        <option selected>Select</option>
                                        <option >Rogers Admin</option>
                                        <option >TPIA Admin</option>
                                        <option >ISP</option>
                                        <option>CSR</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label>First Name<span style="color: red;">*</span></label>
                                <div class="input-group col-sm-12">
                                    <input type="text" class="form-control" >
                                </div>
                            </div>
                    </div>

                    <div class="row margin-bottom-10">
                    <div class="col-sm-6">
                            <label>Last Name <span style="color: red;">*</span></label>
                            <div class="input-group col-sm-12">
                                <input type="text" class="form-control" >
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label>Email address <span style="color: red;">*</span></label>
                            <div class="input-group col-sm-12">
                                <input type="text" class="form-control" >
                            </div>
                        </div>

                    </div>

                    <hr class="devider">
                    <div class="row">
                        <section class="col-sm-12">
                            <button class="btn-u btn-u-default">Cancel</button>
                            <button class="btn-u">Submit</button>
                        </section>
                    </div>

                    </div>

            </div>



        </div>
    </div>
</div>